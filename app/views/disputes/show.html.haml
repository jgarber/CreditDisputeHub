.form-actions
  = link_to "Back", disputes_path, :class => 'btn'
  = link_to "Edit", edit_dispute_path(@dispute), :class => 'btn'
  = link_to "Delete", dispute_path(@dispute), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn'
