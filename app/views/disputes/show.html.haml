%label{:class => "label"}= t("activerecord.attributes.dispute.title", :default => t("activerecord.labels.title", :default => "Title")) + ":"
%p= @dispute.title
%label{:class => "label"}= t("activerecord.attributes.dispute.company_id", :default => t("activerecord.labels.company_id", :default => "Company")) + ":"
%p= @dispute.company_id
%label{:class => "label"}= t("activerecord.attributes.dispute.disputed_amount", :default => t("activerecord.labels.disputed_amount", :default => "Disputed amount")) + ":"
%p= @dispute.disputed_amount
%label{:class => "label"}= t("activerecord.attributes.dispute.description", :default => t("activerecord.labels.description", :default => "Description")) + ":"
%p= @dispute.description
%label{:class => "label"}= t("activerecord.attributes.dispute.private", :default => t("activerecord.labels.private", :default => "Private")) + ":"
